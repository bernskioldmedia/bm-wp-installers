#!/usr/bin/env php
<?php

if ( file_exists( __DIR__ . '/../../../autoload.php' ) ) {
	require __DIR__ . '/../../../autoload.php';
} else {
	require __DIR__ . '/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application( 'BM WP Installers', '1.0.0' );

// Creators.
$app->add( new BernskioldMedia\WP\Installers\Create\PluginCommand );
$app->add( new BernskioldMedia\WP\Installers\Create\CompanyCloudCommand );

// Makers.
$app->add( new BernskioldMedia\WP\Installers\Make\ConfigCommand );
$app->add( new BernskioldMedia\WP\Installers\Make\DatastoreCptCommand );
$app->add( new BernskioldMedia\WP\Installers\Make\DatastoreTaxonomyCommand );

$app->run();
